{
  "$schema": "https://raw.githubusercontent.com/nicedoc/fetch-schema/refs/heads/main/tauri-conf.schema.json",
  "productName": "Flux",
  "version": "0.1.0",
  "identifier": "com.flux.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Flux",
        "width": 1280,
        "height": 800,
        "minWidth": 940,
        "minHeight": 560,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE3RTk4RDkyMzVENkZCNzUKUldSMSs5WTFrbzNwcDhmNCtWK1hmNnhqNVovWU9MSjI0ZDMrUmtnWHJydklNNThPZzNoMzhBTkkK",
      "endpoints": [
        "https://github.com/NoahSmiley/fluxchat/releases/latest/download/latest.json"
      ]
    }
  }
}
